<p id="notice"><%= notice %></p>
<%= render 'shared/messages' %>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<% if @microposts.any? %>
	<ol class="microposts">
		<%= render @microposts %>
	</ol>
<% end %>

<%= form_for(@micropost) do |f| %>
	<div>
		<%= f.text_area :content %>
	</div>
	<%= f.submit 'Post' %>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
